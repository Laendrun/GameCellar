generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
//datasource db {
//  provider = "sqlite"
//  url      = "file:./dev.db"
}

model Game {
	id                String @id @default(uuid())
	title             String
	company           String
	minPlayers        Int
	maxPlayers        Int
	averageDuration   Int
  ageRecommendation String?
	boxImageUrl       String
	translations      Translation[]
	links             Link[]
  tags              GameTag[]
}

model Link {
	id     String @id @default(uuid())
	link   String
	desc   String
	gameId String

	game Game @relation(fields: [gameId], references: [id])
}

model Translation {
	id         String @id @default(uuid())
	lang       String // 'fr', 'en', etc
	rules      String
	boxContent String?
  eanCode    String?
	gameId     String

	@@unique([gameId, lang])
	game Game @relation(fields: [gameId], references: [id])
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String
  isAdmin   Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Tag {
  id    String @id @default(uuid())
  name  String @unique
  games GameTag[]
}

model GameTag {
  gameId String
  tagId  String

  game Game @relation(fields: [gameId], references: [id])
  tag  Tag  @relation(fields: [tagId], references: [id])

  @@id([gameId, tagId])
}
